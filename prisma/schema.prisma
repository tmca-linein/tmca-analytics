generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model ANFEvent {
  id             String   @id @default(uuid())
  assignedUserId String
  wrikeItemId    String
  state          String
  eventDate      DateTime
  authorUserId   String

  @@index([authorUserId, assignedUserId, state, eventDate])
}

model CommentEvent {
  id          String   @id @default(uuid())
  wrikeItemId String
  userId      String
  wordCount   Int
  eventDate   DateTime

  @@index([userId, eventDate])
}
